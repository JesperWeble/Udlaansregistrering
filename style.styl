body
    display flex
    justify-content center
    align-items center
    width 100vw
    height 100vh
    margin 0
    padding 0
    overflow hidden
    background black

.row_container
    display flex
    flex-direction column
    align-items center
    height calc(100vh - 20px)
    width calc(100vw - 20px)
    outline 2px solid rgb(0, 55, 0)
    background rgb(5, 15, 5)
    box-sizing border-box
    padding 10px
    .rows
        width 100%
        height 50px
        outline 2px solid rgb(255, 255, 255)
        background rgb(15, 15, 15)
        color rgb(0, 255, 0)
        margin-bottom 20px