body
    display flex
    justify-content center
    align-items center
    width 100vw
    height 100vh
    margin 0
    padding 0
    overflow hidden
    background black

#row_container
    display flex
    flex-direction column
    align-items center
    height calc(100vh - 20px)
    width calc(100vw - 20px)
    outline 2px solid rgb(0, 55, 0)
    background rgb(5, 15, 5)
    box-sizing border-box
    padding 10px
    overflow-y: auto;
    .rows
        width 100%
        height 50px
        outline 2px solid rgb(54, 54, 54)
        background rgb(15, 15, 15)
        color rgb(0, 255, 0)
        margin-bottom 20px
        padding-left 5px
        align-content center
        &:hover
            background rgb(18, 19, 29)
            outline 2px solid rgb(173, 159, 196)
            color rgb(158, 255, 158)